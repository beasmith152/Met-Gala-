const objectIDsResponse = await fetch('https://collectionapi.metmuseum.org/public/collection/v1/objects');
const objectIDsData = await objectIDsResponse.json();
const objectIDs = objectIDsData.objectIDs.slice(436538, 436542); // Fetch first 4 object IDs for the slider

const fetchObjectDetails = async (id) => {
  const response = await fetch(`https://collectionapi.metmuseum.org/public/collection/v1/objects/${id}`);
  return response.json();
};

const objects = await Promise.all(objectIDs.map(fetchObjectDetails));
const validObjects = objects.filter(object => object.primaryImage); // Filter objects with a primary image
